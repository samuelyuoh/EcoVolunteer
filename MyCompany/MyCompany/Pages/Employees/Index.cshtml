@page
@model MyCompany.Pages.Employees.IndexModel
@{
	ViewData["Title"] = "Employees";
}
<h1 class="display-4">@ViewData["Title"]</h1>
<table class="table mt-3">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.EmployeeList[0].EmployeeId)</th>
			<th>@Html.DisplayNameFor(model => model.EmployeeList[0].NRIC)</th>
			<th>@Html.DisplayNameFor(model => model.EmployeeList[0].Name)</th>
			<th>@Html.DisplayNameFor(model => model.EmployeeList[0].BirthDate)</th>
			<th>@Html.DisplayNameFor(model => model.EmployeeList[0].Gender)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@{
			@foreach (var item in Model.EmployeeList)
			{
				<tr>
					<td>@item.EmployeeId</td>
					<td>@item.NRIC</td>
					<td>@item.Name</td>
					<td>@item.BirthDate.ToShortDateString()</td>
					<td>@item.Gender</td>
					<td>
						<a asp-page="/Employees/Details"
				   asp-route-id="@item.EmployeeId">View</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
<a class="btn btn-primary mt-3" href="/Employees/Add">Add Employee</a>